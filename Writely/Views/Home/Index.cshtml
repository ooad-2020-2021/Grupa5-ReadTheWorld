@{
    ViewData["Title"] = "Home Page";
}

 
@model IEnumerable<Rad> 

<style>
    body {
        background-image: url(https://images.pexels.com/photos/3747490/pexels-photo-3747490.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    .grid-container {
        display: grid;
        grid-gap: 16px;
        row-gap: 300px;
        grid-template-columns: repeat(3, 1fr);
        margin-bottom: 300px;
    }
    .cardcontainer {
        padding-top: 12%;
        background: #D2B48C;
        border-radius: 8px;
        position: relative;
    } 
  .cardcontent {
    position: absolute;
    width: 100%;
  }
    card {
        padding-top: 12%;
        background: #D2B48C;
        border-radius: 8px;
        position: relative;
    }
  img {
      max-width: 100%;
      max-height: 100%;
  }
  
</style>


<div class="text-center">
    <h1 class="display-4" style="font-family: Perpetua">Writely</h1>
</div>
<div class="grid-container">
    @foreach (var item in Model)
    {
    
        <card>
            <div class="cardcontent">
                <div class="card-img">
                    <a asp-area="" asp-controller="Rad" asp-action="Details" asp-route-id="@item.id">
                        <img src="https://i.pinimg.com/564x/75/35/20/753520b079783e156451a10e8e1c6bc0.jpg" style="width: 100%" height="150" />
                    </a>
                 </div>
                <div class="card-header" style="font-family: Perpetua">
                    <h2>@item.Naziv</h2>
                </div>
                <div class="card-body" style="font-family: Perpetua">
                    <article>
                        @item.Sadržaj
                    </article>
                </div>
            </div>
        </card>
    }
    
    


</div>
